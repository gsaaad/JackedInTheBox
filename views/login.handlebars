<div class="container">
    <div class="row align-self-center">
        <div class="col-md-3"></div>
  <div class="col-md-5 col-md-offset-3 bg-secondary py-5 px-5">
    <div class="row align-items-center">
      <div class="pr-md-3 d-none d-md-block">
        <h4 class="text-primary">Login</h4>
      </div>
    </div>
    <div class="py-5 px-3">
      <form>
        <div class="form-row">
          <div class="col form-group">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              name="username"
              class="form-control form-control-lg bg-dark text-white"
              placeholder="Username"
            />
          </div>
          </div>
          <div class="form-row">
          <div class="col form-group">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              name="password"
              class="form-control form-control-lg bg-dark text-white"
              placeholder="Password"
            />
          </div>
          </div>
        </div>
         <div class="form-row">
            <div class="col">
             <a class="btn btn-lg btn-block btn-dark border-light savebtn"
                href="/"
              >Login</a>
            </div>
          </div>
      </form>
       <p class="mt-5 text-white">Create a new account? <a href="/register">Register</a></p>
    </div>
  </div>
</div>
</div>